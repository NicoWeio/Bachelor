# Adaptiert vom Toolbox-Workshop und https://github.com/maxnoe/phd_thesis/blob/master/thesis/plots/matplotlibrc

# pgf-Backend benutzen
backend : pgf

# Größe der Zeichenfläche in Zoll
# figure.figsize : TO BE OVERRIDDEN
savefig.bbox: tight
savefig.pad_inches: 0.0

# Serifenfont benutzen
font.family : serif

# Fontgrößen
font.size : 11
# legend.fontsize : TO BE OVERRIDDEN
xtick.labelsize : 9
ytick.labelsize : 9

# unsere Fonteinstellungen benutzen
pgf.rcfonts : False

# TeX benutzen
text.usetex : True
pgf.texsystem : lualatex
pgf.preamble : \input{myheader.tex}

# Tests ↓
axes.prop_cycle : cycler('color', ['84b819', 'f44708', '2364aa', 'a11692', '3d0c11'])
