# pgf-Backend benutzen
backend : pgf

# Größe der Zeichenfläche in Zoll
figure.figsize : 5.45, 3.64 # (ratio 3:2)
# figure.figsize : 5.45, 1.32 # (ratio 3:1)
# savefig.bbox: tight
# savefig.pad_inches: 0.0

# Serifenfont benutzen
font.family : serif

# Fontgrößen
font.size : 11
legend.fontsize : medium
legend.fontsize : small
xtick.labelsize : 9
ytick.labelsize : 9

# unsere Fonteinstellungen benutzen
pgf.rcfonts : False

# TeX benutzen
text.usetex : True
pgf.texsystem : lualatex
pgf.preamble : \input{myheader.tex}

# Tests ↓
axes.prop_cycle : cycler('color', ['84b819', 'f44708', '2364aa', 'a11692', '3d0c11'])
